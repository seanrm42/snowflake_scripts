// SET ROLE CONTEXT
use role accountadmin;

// CREATE WAREHOUSE
create or replace warehouse sample_wh;

// SET WAREHOUSE CONTEXT
use warehouse sample_wh;

// CREATE DATABASE
create or replace database sample_db; 

// SET SCHEMA CONTEXT
use schema sample_db.public;


// CREATE SAMPLE DATA
create or replace table customer as
    select * 
    from sample_data.tpch_sf1000.customer 
    sample (90);

create or replace table nation as
    select * 
    from sample_data.tpch_sf1000.nation 
    sample (90);
    
create or replace table region as
    select * 
    from sample_data.tpch_sf1000.region 
    sample (90);
    

// CREATE DYNAMIC TABLE
create or replace dynamic table sample_table
lag = '1 minute'
warehouse = sample_wh
as
select c_custkey id
    ,c_name name
    ,c_address address
    ,c_phone phone
    ,c_acctbal balance
    ,c_mktsegment market
    ,n_name nation
    ,r_name region
from customer
    ,nation
    ,region
where customer.c_nationkey = nation.n_nationkey
    and nation.n_regionkey = region.r_regionkey
    and region.r_name in ('AMERICA','EUROPE','ASIA');


// INSERT NEW SAMPLE DATA
insert into customer
    select * 
    from sample_data.tpch_sf1000.customer
    where c_custkey not in (select c_custkey from customer);

insert into nation
    select * 
    from sample_data.tpch_sf1000.nation
    where n_nationkey not in (select n_nationkey from nation);
    
insert into region
    select * 
    from sample_data.tpch_sf1000.region
    where r_regionkey not in (select r_regionkey from region);

select name
    ,state
    ,error_code
    ,error_message
    ,query_id
    ,refresh_version
    ,refresh_end_time
from table(information_schema.dynamic_table_refresh_history(name_prefix => 'SAMPLE_DB.PUBLIC.'))
order by name, refresh_version;

select *
from table(information_schema.dynamic_table_refresh_history);

/* CLEAN UP
drop database sample_db;
drop warehouse sample_wh;
